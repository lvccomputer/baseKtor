<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="BaseTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textAllCaps">false</item>
        <item name="editTextStyle">@style/Input</item>
        <item name="android:textViewStyle">@style/TextAppearance</item>
        <item name="fontFamily">@font/inter_regular</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
<!--        <item name="android:statusBarColor">@color/status_bar_color</item>-->
        <item name="android:windowBackground">@color/backgroundColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/secondaryTextColor</item>
        <item name="colorSecondaryVariant">@color/secondaryTextColor</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorError">@color/red_radish</item>
        <item name="colorOnError">@color/white</item>
    </style>

    <style name="AppTheme" parent="BaseTheme" />

    <style name="Input" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:textColorHint">@color/secondaryTextColor</item>
        <item name="android:paddingStart">@dimen/_12sdp</item>
        <item name="android:paddingEnd">@dimen/_12sdp</item>
        <item name="android:paddingTop">@dimen/_8sdp</item>
        <item name="android:paddingBottom">@dimen/_8sdp</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:background">@null</item>
    </style>
    <style name="Input.Border" >
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:textColorHint">@color/secondaryTextColor</item>
        <item name="android:paddingStart">@dimen/_12sdp</item>
        <item name="android:paddingEnd">@dimen/_12sdp</item>
        <item name="android:paddingTop">@dimen/_8sdp</item>
        <item name="android:paddingBottom">@dimen/_8sdp</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:background">@drawable/border_edittext</item>
    </style>
    <style name="TextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>

    <style name="TextAppearance.ToolbarTitle">
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/gray_18</item>
        <item name="fontFamily">@font/inter_medium</item>
    </style>

    <style name="TextAppearance.BodyMedium">
        <item name="fontFamily">@font/inter_medium</item>
    </style>

    <style name="TextAppearance.BoldSemi">
        <item name="fontFamily">@font/inter_semi_bold</item>
    </style>

    <style name="TextAppearance.Bold">
        <item name="fontFamily">@font/inter_bold</item>
    </style>

    <style name="TextAppearance.BodyMedium.TitleItem">
        <item name="android:gravity">center_vertical|start</item>
        <item name="android:textColor">@color/gray_18</item>
        <item name="android:textSize">@dimen/_13sdp</item>
    </style>

    <style name="TextAppearance.BoldSemi.TitleItem">
        <item name="android:gravity">center_vertical|start</item>
        <item name="android:textColor">@color/gray_18</item>
        <item name="android:textSize">@dimen/_13sdp</item>
    </style>

    <style name="TextAppearance.Description">
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textColor">@color/gray_18</item>
        <item name="android:lineSpacingExtra">@dimen/_6sdp</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="fontFamily">@font/inter_regular</item>
    </style>

    <style name="TextAppearance.ToolbarLabel">
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/inter_regular</item>
    </style>

    <style name="Dialog.Theme" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="Custom.BottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>>
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/shape_rounded_top</item>
    </style>

    <style name="UnelevatedButtonCustom" parent="@style/Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="backgroundTint">@color/unelevatedbutton_background_color</item>
        <item name="android:textColor">@color/unelevatedbutton_text_color</item>
        <item name="android:textStyle">normal</item>
        <item name="fontFamily">@font/inter_medium</item>
        <item name="rippleColor">@color/transparent</item>
        <item name="android:letterSpacing">0</item>
        <item name="cornerRadius">@dimen/_20sdp</item>
        <item name="android:gravity">center</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:textSize">@dimen/_13sdp</item>
    </style>

    <style name="UnelevatedButtonCustom.Stroke">
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:textColor">@color/blue</item>
        <item name="iconTint">@color/blue</item>
        <item name="iconGravity">textStart</item>
        <item name="strokeWidth">1dp</item>
        <item name="backgroundTint">@color/transparent</item>
        <item name="strokeColor">@color/blue</item>
        <item name="fontFamily">@font/inter_medium</item>
    </style>

    <style name="ShapeAppearance.Circle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>